{
    "name": "crystal_clear",
    "version": "1.0.0",
    "description": "handlebars template that includes basic auth ",
    "main": "index.js",
    "scripts": {
        "deploy": "git add . && git commit -m 'updated' && git push && npm version patch && npm publish",
        "docs": "rm -rf docs/jsdocs && ./node_modules/.bin/jsdoc --configure backend/config/jsdoc.json -d docs/jsdocs --verbose",
        "merge": "rm -rf docs/swagger/swagger.yaml && swagger-merger -i docs/swagger/index.yaml",
        "test": "node __tests__/index.js",
        "start": "npm run docs && npm run merge && nodemon app.js",
        "prepare": "husky install"
    },
    "keywords": [
        "test",
        "handlebars",
        "hbs",
        "template",
        "auth"
    ],
    "author": "lezzles11",
    "license": "MIT",
    "dependencies": {
        "array_helperz": "^1.0.13",
        "better-logging": "^4.7.0",
        "body-parser": "^1.19.2",
        "chance": "^1.1.8",
        "code_clarity": "^1.0.17",
        "commitlint": "^16.2.1",
        "cookie-parser": "^1.4.6",
        "cookie-session": "^2.0.0",
        "copyfiles": "^2.4.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "express-handlebars": "^6.0.2",
        "express-hbs": "^2.4.0",
        "format_date_time_moment": "^1.14.4",
        "gulp-mocha": "^8.0.0",
        "handlebars": "^4.7.7",
        "html_basetest": "^1.3.0",
        "i18n": "^0.14.1",
        "jsdoc": "^3.6.10",
        "knex": "^1.0.3",
        "knex_cleandata": "^1.2.3",
        "lesleys_hbs": "^1.0.3",
        "lodash": "^4.17.21",
        "make_fakes": "^1.0.14",
        "method-override": "^3.0.0",
        "morgan": "^1.10.0",
        "node_basetest": "^2.6.12",
        "nodemon": "^2.0.15",
        "pg": "^8.7.3",
        "superagent": "^7.1.1",
        "swagger-merger": "^1.5.4",
        "swagger-ui-express": "^4.3.0",
        "triple-beam": "^1.3.0",
        "validator": "^13.7.0",
        "winston": "^3.6.0",
        "winston-daily-rotate-file": "^4.6.1",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.1",
        "@commitlint/config-conventional": "^16.2.1",
        "clean-jsdoc-theme": "^3.3.3",
        "gulp": "^4.0.2",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.4",
        "prettier": "^2.5.1"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown",
        "*.{js,css,md}": "prettier --write"
    },
    "commitlint": {
        "rules": {
            "type-enum": [
                2,
                "always", [
                    "library",
                    "feature",
                    "util",
                    "test",
                    "docs",
                    "refactor",
                    "style",
                    "bug",
                    "deploy",
                    "fix"
                ]
            ]
        }
    }
}